<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    style="@style/MainTheme">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/search_recipes"
        style="@style/HeaderTheme"/>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        style="@style/MainTheme">

        <Button
            android:text="@string/previous_recipes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/previousRecipesButton"
            android:layout_weight="1"
            style="@style/ButtonTheme" />

        <Button
            android:text="@string/next_recipes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/nextRecipesButton"
            android:layout_weight="1"
            style="@style/ButtonTheme" />

    </LinearLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/recipesListView" />

</LinearLayout>